# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/netlens
MONGO_DB_NAME=netlens

# Network Settings (UPDATE WITH YOUR NETWORK RANGES)
NETWORK_RANGES=192.168.1.0/24,192.168.2.0/24
# Scan every hour (0-23)
# Disable scheduled scans by default; enable from UI when desired
SCAN_SCHEDULE=disabled

# API Settings
PORT=5000
NODE_ENV=production

# Application Authentication
DEFAULT_ADMIN_USERNAME=sudo
DEFAULT_ADMIN_PASSWORD=Sudo123
# Set this to a long random string in production
APP_SESSION_SECRET=
BCRYPT_ROUNDS=12

# Session cookie behavior
# auto: secure cookies on HTTPS requests, non-secure on HTTP requests
COOKIE_SECURE=auto

# CORS (Frontend URL)
CORS_ORIGIN=http://localhost:3000

# Optional HTTPS
ENABLE_HTTPS=false
HTTPS_PORT=5443
TLS_CERT_PATH=/opt/netscanner/certs/netlens.crt
TLS_KEY_PATH=/opt/netscanner/certs/netlens.key

# Logging
LOG_FILE=/opt/netscanner/logs/scanner.log
LOG_LEVEL=INFO

# Nmap NSE scripts
# Default (if unset): vuln
# Safer option (less intrusive): safe
# Mixed expression example: "vuln or safe" (quoted)
# Disable NSE scripts entirely:
# SCAN_NMAP_SCRIPTS=off
# SCAN_NMAP_SCRIPTS=safe
# SCAN_NMAP_SCRIPTS="vuln or safe"